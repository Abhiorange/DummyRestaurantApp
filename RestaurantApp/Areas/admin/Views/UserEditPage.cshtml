@model DataEntities.ViewModel.storeitemviewmodel<body>    <div class="container mt-2 overflow-tableEntry">        <div class="col-12 bg-light border p-2">            Edit        </div>        <div class="border">            <form method="post" asp-action="UpdateItem" asp-controller="Home">                <div class="col-12 d-flex flex-column my-2">                    <label asp-for="Itemid" for="title"></label>                    <input type="text" id="title" class="form-control" asp-for="Itemid">                    <span class="text-danger" asp-validation-for="Itemid"></span>                </div>                <input asp-for="Itemid" type="text" hidden />                <div class="col-4 d-flex flex-column my-2">                    <label asp-for="ItemName" for="status"></label>                    <input type="text" id="title" class="form-control" asp-for="ItemName">                    <span class="text-danger" asp-validation-for="ItemName"></span>                </div>                  <div class="col-4 d-flex flex-column my-2">                    <label asp-for="Itemprice" for="status"></label>                    <input type="text" id="title" class="form-control" asp-for="Itemprice">                    <span class="text-danger" asp-validation-for="Itemprice"></span>                </div>                <div class="d-flex justify-content-end">                    <button type="button" class="btn btn-secondary rounded-pill"> <a class="text-white text-decoration-none rounded-pill me-1" asp-action="Skill" asp-controller="Admin">Cancel</a></button>                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>                </div>            </form>        </div>    </div>    @section Scripts{@{<partial name="_ValidationScriptsPartial"/>}}</body>